<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#000000">


    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/poprock"
        android:background="@drawable/poprock"
        android:onClick="poprock"
        android:layout_above="@+id/blues"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/electronic"
        android:background="@drawable/electronic"
        android:layout_alignTop="@+id/poprock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="electronic" />

    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/blues"
        android:background="@drawable/blues"
        android:onClick="blues"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/jazz"
        android:background="@drawable/jazz"
        android:onClick="jazz"
        android:layout_below="@+id/blues"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/reggae"
        android:background="@drawable/reggae"
        android:layout_alignTop="@+id/jazz"
        android:layout_alignLeft="@+id/rb"
        android:layout_alignStart="@+id/rb"
        android:onClick="reggae" />

    <ImageButton
        android:layout_width="160dip"
        android:layout_height="130dip"
        android:id="@+id/rb"
        android:background="@drawable/rb"
        android:layout_above="@+id/jazz"
        android:layout_alignLeft="@+id/electronic"
        android:layout_alignStart="@+id/electronic"
        android:onClick="rb" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"
        android:id="@+id/random"
        android:layout_alignParentBottom="true"
        android:background="#02FEBA"
        android:textColor="#FFFFFF"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="280dip"
        android:layout_height="wrap_content"
        android:id="@+id/search"
        android:hint="Search"
        android:gravity="center"
        android:layout_above="@+id/poprock"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <ImageButton
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:id="@+id/seek"
        android:background="@drawable/seek"
        android:onClick="playSong"
        android:layout_alignBottom="@+id/search"
        android:layout_alignRight="@+id/random"
        android:layout_alignEnd="@+id/random" />

</RelativeLayout>
